---
import { Icon } from './Icons';
---

<section class="relative min-h-screen overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-black/90"></div>
    <div class="absolute inset-0 bg-gradient-to-br from-black/95 via-black/85 to-black/70"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_bottom_left,rgba(43,92,63,0.2)_0%,transparent_50%)]"></div>
    <img 
      src="/images/hero.jpg" 
      alt="Pole uprawne" 
      class="w-full h-full object-cover scale-105 brightness-[0.3]"
    />
    <!-- Grid Pattern Overlay -->
    <div class="absolute inset-0" style="background-image: linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px), linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px); background-size: 4px 4px;"></div>
    <!-- Dynamic Light Effect -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/60 to-transparent"></div>
  </div>

  <!-- Main Content -->
  <div class="relative z-20 max-w-7xl mx-auto px-4">
    <div class="min-h-[calc(100vh-80px)] lg:min-h-screen grid grid-cols-1 lg:grid-cols-2 gap-12 items-start lg:items-center pt-28 lg:pt-0">
      <!-- Left Column -->
      <div class="lg:max-w-2xl relative z-20">
        <div class="relative">
          <div class="relative space-y-6 mb-8" data-aos="fade-up" data-aos-duration="800">
            <div class="flex flex-wrap gap-3 mb-3">
              <div class="inline-flex items-center gap-2 px-6 py-2 rounded-full bg-[#8FD87A]/20 backdrop-blur-xl text-[#8FD87A] text-sm font-medium border border-[#8FD87A]/20 shadow-[0_0_20px_rgba(143,216,122,0.1)]">
                <Icon name="Leaf" size={16} client:load />
                <span>Rewolucja w naturalnym rolnictwie</span>
              </div>
              <div class="inline-flex items-center gap-2 px-6 py-2 rounded-full bg-white/20 backdrop-blur-xl text-white text-sm font-bold border border-white/20 shadow-[0_0_20px_rgba(255,255,255,0.1)]">
                <img src="/images/poland-flag.svg" alt="Flaga Polski" class="w-5 h-auto" />
                <span>100% PRODUKT POLSKI</span>
              </div>
            </div>
            
            <h1 class="text-[2rem] sm:text-5xl lg:text-6xl font-heading font-bold leading-[1.1] sm:leading-tight text-white">
              <span class="block mb-2 bg-clip-text text-transparent bg-gradient-to-r from-white to-white/80">Naturalne nawozy</span> 
              <span class="relative inline-block">
                <span class="bg-gradient-to-r from-[#6AB658] via-[#8FD87A] to-[#A8E697] bg-clip-text text-transparent text-[1.75rem] sm:text-5xl lg:text-6xl">z&nbsp;minerałów&nbsp;skalnych</span>
              </span>
            </h1>
          </div>

          <!-- Description -->
          <p class="text-lg lg:text-xl text-white/90 mb-10 max-w-xl" data-aos="fade-up" data-aos-delay="100" data-aos-duration="800">
            Z natury dla natury – mineralne wsparcie dla Twojej gleby oraz zdrowych plonów
          </p>

          <!-- Stats Grid -->
          <div class="hidden sm:grid sm:grid-cols-3 gap-4 mb-12" data-aos="fade-up" data-aos-delay="200" data-aos-duration="800">
            <div class="group p-4 bg-white/10 backdrop-blur-xl rounded-xl border border-white/20 hover:bg-white/20 transition-all duration-300 animate-slide-up delay-300 hover:scale-105 hover:shadow-[0_0_30px_rgba(255,255,255,0.2)]">
              <div class="text-2xl font-bold text-white">Do 70%</div>
              <div class="text-sm text-white/80">mniej tradycyjnego nawozu</div>
            </div>
            <div class="group p-4 bg-white/10 backdrop-blur-xl rounded-xl border border-white/20 hover:bg-white/20 transition-all duration-300 animate-slide-up delay-400 hover:scale-105 hover:shadow-[0_0_30px_rgba(255,255,255,0.2)]">
              <div class="text-2xl font-bold text-white">100%</div>
              <div class="text-sm text-white/80">Naturalne składniki mineralne</div>
            </div>
            <div class="group p-4 bg-white/10 backdrop-blur-xl rounded-xl border border-white/20 hover:bg-white/20 transition-all duration-300 animate-slide-up delay-500 hover:scale-105 hover:shadow-[0_0_30px_rgba(255,255,255,0.2)]">
              <div class="text-2xl font-bold text-white">1500+</div>
              <div class="text-sm text-white/80">Zadowolonych gospodarstw w całej Polsce</div>
            </div>
          </div>

          <!-- CTA Section -->
          <div class="flex flex-col sm:flex-row gap-4" data-aos="fade-up" data-aos-delay="300" data-aos-duration="800">
            <a
              href="#about"
              class="group relative overflow-hidden bg-[#6AB658] text-white px-8 py-4 rounded-xl font-semibold flex items-center justify-center gap-2 transition-all duration-300 hover:shadow-[0_0_30px_rgba(106,182,88,0.3)] hover:scale-105"
            >
              <span class="relative z-10">Dowiedz się więcej</span>
              <Icon name="TrendingUp" size={20} client:load />
              <div class="absolute inset-0 bg-gradient-to-r from-[#6AB658] via-[#6AB658]/90 to-[#6AB658]/80 translate-x-[-100%] group-hover:translate-x-0 transition-transform duration-500"></div>
            </a>
            
            <a 
              href="#contact" 
              class="text-white hover:text-white/90 font-medium transition-all duration-300 text-center px-8 py-4 bg-white/10 backdrop-blur-xl rounded-xl border border-white/20 hover:bg-white/20 hover:scale-105 hover:shadow-[0_0_30px_rgba(255,255,255,0.2)]"
            >
              Skontaktuj się
            </a>
          </div>
        </div>
      </div>
      
      <!-- Right Column - Vulora Ball -->
      <div class="absolute lg:relative bottom-[-120px] lg:bottom-auto left-0 right-0 lg:left-auto lg:right-auto w-full lg:w-auto z-10" data-aos="fade-left" data-aos-duration="1000">
        <div class="absolute -top-24 -right-24 w-96 h-96 bg-primary/20 rounded-full blur-3xl animate-pulse-subtle"></div>
        <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-primary/10 rounded-full blur-3xl animate-pulse-subtle delay-500"></div>
        <img
          src="/images/vuloraball.png" 
          alt="Vulora" 
          class="w-full h-auto max-w-[640px] mx-auto relative z-10 animate-float"
        />
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes pulse-subtle {
    0%, 100% { opacity: 0.2; }
    50% { opacity: 0.25; }
  }

  .animate-pulse-subtle {
    animation: pulse-subtle 4s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    25% { transform: translateY(-10px) rotate(2deg); }
    75% { transform: translateY(10px) rotate(-2deg); }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
</style>